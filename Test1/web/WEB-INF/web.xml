<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <context-param><!--是上下文参数（它属于整个web工程，公用的）-->
        <param-name>username</param-name>
        <param-value>context</param-value>
    </context-param>

    <context-param><!--是上下文参数（它属于整个web工程，公用的）-->
        <param-name>password</param-name>
        <param-value>root</param-value>
    </context-param>


    <servlet><!--servlet标签给Tomcat配置Servlet程序-->
        <servlet-name>HelloServlet</servlet-name><!--servlet-name标签是给Servlet程序起一个别名(一般是类名)-->
        <servlet-class>com.atguigu.HelloServlet</servlet-class><!--servlet-class是Servlet程序的完整类名-->
        <init-param><!--init-param是初始化参数-->
            <param-name>username</param-name><!--是参数名-->
            <param-value>root</param-value><!--是参数值-->
        </init-param>
        <init-param><!--init-param是初始化参数-->
            <param-name>url</param-name><!--是参数名-->
            <param-value>jdbc:mysql://localhost:3306/test</param-value><!--是参数值-->
        </init-param>
    </servlet>

    <servlet-mapping><!--servlet-mapping标签给Servlet程序配置访问地址-->
        <servlet-name>HelloServlet</servlet-name><!--这里servlet-name标签的作用是告诉服务器，我当前配置的地址给哪个Servlet程序使用-->
        <!--url-pattern标签配置访问地址
            / 表示的是工程路径：http://ip地址:port/工程路径
            /hello 表示资源路径，解析地址为：http://ip地址:port/工程路径/hello
        -->
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>HelloServlet2</servlet-name>
        <servlet-class>com.atguigu.HelloServlet2</servlet-class>
        <init-param><!--init-param是初始化参数-->
            <param-name>username</param-name><!--是参数名-->
            <param-value>root2</param-value><!--是参数值-->
        </init-param>
        <init-param><!--init-param是初始化参数-->
            <param-name>url</param-name><!--是参数名-->
            <param-value>jdbc:mysql://localhost:3306/test2</param-value><!--是参数值-->
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>HelloServlet2</servlet-name>
        <url-pattern>/hello2</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>HelloServlet3</servlet-name>
        <servlet-class>com.atguigu.HelloServlet3</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>HelloServlet3</servlet-name>
        <url-pattern>/hello3</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>ContentServlet</servlet-name>
        <servlet-class>com.atguigu.ContentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ContentServlet2</servlet-name>
        <servlet-class>com.atguigu.ContentServlet2</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ContentServlet</servlet-name>
        <url-pattern>/contentServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ContentServlet2</servlet-name>
        <url-pattern>/contentServlet2</url-pattern>
    </servlet-mapping>


</web-app>